rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /devices/{deviceId} {
      allow read: if request.auth != null;
      allow write: if false; 

      match /commands/{commandId} {
        
        function isAllowed() {
          let deviceDoc = get(/databases/$(database)/documents/devices/$(deviceId));
          // If the device document doesn't exist, we assume no restrictions (or you could deny).
          // Assuming "no restrictions" lets you see commands for a ghost device, which is harmless.
          // More importantly, it prevents the rule from crashing on null.data.
          let data = deviceDoc != null ? deviceDoc.data : {};
          
          return request.auth != null && (
            deviceDoc == null ||
            !('allowed_emails' in data) ||
            data.allowed_emails == null ||
            data.allowed_emails.size() == 0 ||
            request.auth.token.email in data.allowed_emails
          );
        }

        allow read, list, create, update, delete: if isAllowed();
      }
    }
  }
}
